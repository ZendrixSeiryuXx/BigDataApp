<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#2E2E2E"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCarrito"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/rogstrix_g15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nombreCarrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rog Strix G15"
                android:textColor="@color/white"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/marcaCarrito"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASUS"
                android:textColor="@color/botonIniciar"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:textAlignment="textStart" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="S/. "
                    android:textColor="@color/botonIniciar"
                    android:textStyle="bold"
                    />

                <TextView

                    android:id="@+id/precioOfertaCarrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="7650"
                    android:textAlignment="textStart"
                    android:textColor="@color/botonIniciar"
                    android:textStyle="bold"
                    />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="S/. "
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    />

                <TextView

                    android:id="@+id/precioRealCarrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="7650"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/btnEliminarCarrito"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#333333"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:src="@drawable/delete"/>


            </LinearLayout>





        </LinearLayout>













    </LinearLayout>




</androidx.cardview.widget.CardView>