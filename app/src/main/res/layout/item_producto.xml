<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="250dp"
    app:cardCornerRadius="20dp"
    android:elevation="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="#242424">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="- 10%"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#ff4343"
                    android:gravity="center"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageItem"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/item_laptop"
                android:scaleType="centerInside"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/marca"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Asus"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#ff4343"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Rog Strix G15"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:ellipsize="end"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/costoFinal"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="S/. 7650"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ff4343"
                android:ellipsize="end"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/costoInicial"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Normal S/. 8650"
                android:textSize="10sp"
                android:textStyle="normal"
                android:textColor="#FFFFFF"
                android:ellipsize="end"
                android:layout_gravity="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <Button
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="AÃ±adir al carrito"
                    android:textSize="8sp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#363636"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#363636"
                    app:cardCornerRadius="6dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:src="@drawable/vector_favorite"
                        android:layout_gravity="center"/>

                </androidx.cardview.widget.CardView>



            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>